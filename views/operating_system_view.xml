<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="operating_system_form" model="ir.ui.view">
        <field name="name">operating.system.form</field>
        <field name="model">operating.system</field>
        <field name="arch" type="xml">
            <form string="Operating System">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="common_use"/>
                    </group>
                    <group col="4">
                        <field name="category"/>
                        <field name="latest_version"/>
                        <field name="ram_usage"/>
                        <field name="disk_usage"/>
                        <field name="website"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="operating_system_tree" model="ir.ui.view">
        <field name="name">operating.system.tree</field>
        <field name="model">operating.system</field>
        <field name="arch" type="xml">
            <tree name="Operating System">
                <field name="name"/>
                <field name="ram_usage"/>
                <field name="disk_usage"/>
                <field name="latest_version"/>
                <field name="website"/>
                <field name="category"/>
            </tree>
        </field>
    </record>

    <record id="operating_system_action" model="ir.actions.act_window">
        <field name="name">Operating System</field>
        <field name="res_model">operating.system</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="operating_system_menu"
              name="Operating System"
              parent="blog_menu"
              action="operating_system_action"
              sequence="60"/>

</odoo>