<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ops_list_form" model="ir.ui.view">
        <field name="name">ops.list.form</field>
        <field name="model">ops.list</field>
        <field name="arch" type="xml">
            <form string="Operating System List">
                <sheet>
                    <h1><field name="sequence"/></h1>
                    <group col="4">
                        <field name="name"/>
                        <field name="template_id"/>
                        <field name="item_ids" widget="many2many_tags"/>
                    </group>
                    <button name="trigger_generate_blog" string="Generate Blog" type="object"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ops_list_tree" model="ir.ui.view">
        <field name="name">ops.list.tree</field>
        <field name="model">ops.list</field>
        <field name="arch" type="xml">
            <tree name="Operating System List">
                <field name="sequence"/>
                <field name="name"/>
                <field name="template_id"/>
            </tree>
        </field>
    </record>

    <record id="ops_list_action" model="ir.actions.act_window">
        <field name="name">Operating System List</field>
        <field name="res_model">ops.list</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="ops_list_menu"
              name="Operating System List"
              parent="blog_menu"
              action="ops_list_action"
              sequence="70"/>

</odoo>