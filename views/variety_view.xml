<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="blog_variety_form" model="ir.ui.view">
        <field name="name">blog.variety.form</field>
        <field name="model">blog.variety</field>
        <field name="arch" type="xml">
            <form string="Variety">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="blog_variety_tree" model="ir.ui.view">
        <field name="name">blog.variety.tree</field>
        <field name="model">blog.variety</field>
        <field name="arch" type="xml">
            <tree name="Variety">
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="blog_variety_action" model="ir.actions.act_window">
        <field name="name">Variety</field>
        <field name="res_model">blog.variety</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="blog_variety_menu"
              name="Variety"
              parent="blog_menu"
              action="blog_variety_action"
              sequence="80"/>

</odoo>